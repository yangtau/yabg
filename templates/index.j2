{% extends "base.j2" %}
{% block content %}

{{ super() }}
    
<h2>文章</h2>
<!-- __posts post.hide post.date post.title post.__url -->
<ul>
{% for post in __posts|rejectattr('hide')|sort(attribute='date', reverse=True) %}
<li>{{ post.date }} <a href={{ post.__url }}> {{ post.title }}</a></li>
{% endfor %}
</ul>

{% endblock %}
